<Window x:Class="Page.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Page"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <WrapPanel>
            <TextBlock Text="Количество записей: " Margin="5" VerticalAlignment="Center"/>
            <ComboBox SelectedIndex="0" SelectionChanged="CBNumberWrite_SelectionChanged" x:Name="CBNumberWrite" Margin="5"/>
        </WrapPanel>
        <DataGrid Margin="5" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False" x:Name="DGWrites">
            <DataGrid.Columns>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding Picture}" Height="50"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Binding="{Binding Material.id}" Header="id" Width="*"/>
                <DataGridTextColumn Binding="{Binding Name}" Header="Name" Width="*"/>
                <DataGridTextColumn Binding="{Binding TypeProd.NameType}" Header="Type" Width="*"/>
                <DataGridTextColumn Binding="{Binding Material.CountPackaged}" Header="CountPackaqed" Width="*"/>
                <DataGridTextColumn Binding="{Binding Material.Unit}" Header="Unit" Width="*"/>
                <DataGridTextColumn Binding="{Binding Material.CountStocked}" Header="CountStocked" Width="*"/>
                <DataGridTextColumn Binding="{Binding Material.MinimumBalance}" Header="MinimumBalance" Width="*"/>
                <DataGridTextColumn Binding="{Binding Material.Cost}" Header="Cost" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <WrapPanel Grid.Row="2" HorizontalAlignment="Center">
            <Button x:Name="BLeft" Click="BLeft_Click" Content="Left" Width="50" Margin="5"/>
            <ScrollViewer MaxWidth="300" Margin="5" ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.VerticalScrollBarVisibility="Hidden">
                <WrapPanel x:Name="WPButtons"/>
            </ScrollViewer>
            <Button x:Name="BRight" Click="BRight_Click" Content="Right" Margin="5" Width="50"/>
        </WrapPanel>
        <WrapPanel Margin="583,0,29,0">
            <TextBlock Text="Сортировка: " Margin="5" VerticalAlignment="Center"/>
            <ComboBox SelectedIndex="0" SelectionChanged="CBSortiried_SelectionChanged" x:Name="CBSortiried" Margin="5"/>
        </WrapPanel>
    </Grid>
</Window>
